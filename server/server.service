[Unit]
Description=uWSGI instance to serve server
After=network.target

[Service]
User=azureuser
Group=www-data
WorkingDirectory=/home/azureuser/server
Environment="PATH=/home/azureuser/server/venv/bin"
ExecStart=/home/azureuser/server/venv/bin/uwsgi --ini server.ini

[Install]
WantedBy=multi-user.target
